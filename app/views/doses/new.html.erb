<h1>Add a dose</h1>
<%= simple_form_for @dose do |f| %>
  <% if @dose.errors.any? %>
    <div id="error-explanation">
      <ul>
      <% @dose.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :ingredient_id, label: 'Ingredient', collection: @ingredients %>
  <%= f.input :description, label: 'Description' %>
  <%= f.submit %>
<% end %>
